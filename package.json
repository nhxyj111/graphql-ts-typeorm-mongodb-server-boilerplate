{
    "name": "graphql-ts-server-boilerplate",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeORM.",
    "devDependencies": {
        "@gql2ts/types": "^1.9.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^23.3.10",
        "@types/node": "^10.12.12",
        "gql2ts": "^1.10.1",
        "jest": "^23.6.0",
        "nodemon": "^1.18.7",
        "prettier": "^1.15.3",
        "start-server-and-test": "^1.7.11",
        "ts-jest": "^23.10.5",
        "ts-node": "7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "3.2.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "graphql": "^14.0.2",
        "graphql-import": "^0.7.1",
        "graphql-request": "^1.8.2",
        "graphql-tools": "^4.0.3",
        "graphql-yoga": "^1.16.7",
        "mongodb": "^3.1.10",
        "reflect-metadata": "^0.1.12",
        "typeorm": "0.2.9"
    },
    "scripts": {
        "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
        "test-server": "NODE_ENV=test ts-node src/index.ts",
        "test": "NODE_ENV=test jest",
        "ci": "start-server-and-test test-server http://localhost:4000 test",
        "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
